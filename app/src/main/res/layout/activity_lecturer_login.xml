<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- EditText for email -->
    <EditText
        android:id="@+id/lecturer_email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_margin="16dp"/>

    <!-- EditText for password -->
    <EditText
        android:id="@+id/lecturer_password_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_below="@id/lecturer_email_edit_text"
        android:layout_margin="16dp"
        android:inputType="textPassword"/>

    <!-- Button for login -->
    <Button
        android:id="@+id/lecturer_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_below="@id/lecturer_password_edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- Button for registration -->
    <Button
        android:id="@+id/lecturer_registration_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_below="@id/lecturer_login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

</RelativeLayout>

