<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/lecturer_registration_email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/lecturer_registration_password_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_below="@id/lecturer_registration_email_edit_text"
        android:layout_margin="16dp"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/staff_number_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Staff Number"
        android:layout_below="@id/lecturer_registration_password_edit_text"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/lecturer_register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_below="@id/staff_number_edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

</RelativeLayout>
